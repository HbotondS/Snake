<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.control.Button?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.control.TextField?>
<?import javafx.scene.layout.AnchorPane?>
<?import javafx.scene.layout.HBox?>
<?import javafx.scene.layout.VBox?>
<?import javafx.scene.text.Font?>

<AnchorPane fx:id="background" prefHeight="400.0" prefWidth="400.0" stylesheets="@../styles/overallStyle.css" xmlns="http://javafx.com/javafx/9.0.1" xmlns:fx="http://javafx.com/fxml/1" fx:controller="com.hegyi.botond.controllers.SettingsViewController">
   <VBox fx:id="everything" layoutX="-4.0" prefHeight="400.0" prefWidth="400.0" stylesheets="@../styles/SettingsViewStyle.css">
      <children>
          <Label fx:id="settingsLabel" text="Settings">
              <font>
                <Font size="36.0" />
              </font>
          </Label>
         <HBox fx:id="inputsAndLabels" prefHeight="100.0" prefWidth="200.0">
            <children>
               <VBox fx:id="labels" prefHeight="124.0" prefWidth="145.0">
                  <children>
                  
                      <Label text="Move Up:">
                          <font>
                              <Font size="20" />
                          </font>
                      </Label>
                      <Label text="Move Down:">
                          <font>
                              <Font size="20" />
                          </font>
                      </Label>
                      <Label text="Move Right:">
                          <font>
                              <Font size="20" />
                          </font>
                      </Label>
                      <Label text="Move Left:">
                          <font>
                              <Font size="20" />
                          </font>
                      </Label>
                  </children>
               </VBox>
               <VBox fx:id="inputs" prefHeight="200.0" prefWidth="100.0">
                  <children>
                  
                      <TextField fx:id="upText" onKeyReleased="#changeText" prefHeight="25" prefWidth="100">
                        <font>
                           <Font size="15" />
                        </font>
                      </TextField>
                      <TextField fx:id="downText" onKeyReleased="#changeText" prefHeight="25" prefWidth="100">
                        <font>
                           <Font size="15" />
                        </font>
                      </TextField>
                      <TextField fx:id="rightText" onKeyReleased="#changeText" prefHeight="25" prefWidth="100">
                        <font>
                           <Font size="15" />
                        </font>
                      </TextField>
                      <TextField fx:id="leftText" onKeyReleased="#changeText" prefHeight="25" prefWidth="100">
                        <font>
                           <Font size="15" />
                        </font>
                      </TextField>
                  </children>
               </VBox>
            </children>
         </HBox>
         <HBox fx:id="buttons" prefHeight="100.0" prefWidth="200.0">
            <children>
               <Button mnemonicParsing="false" onAction="#reset" text="Reset" />
            
                <Button fx:id="backBtn" mnemonicParsing="false" onAction="#back" text="Back" />
            </children>
         </HBox>
      </children>
   </VBox>
</AnchorPane>
